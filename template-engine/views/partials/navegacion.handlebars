<tbody id="lista-principal">
  {{#each items as |item|}}
  <tr>
    <td>{{item.name}}</td>
    <td>{{item.area.name}}</td>
    <td>
      <img class="imagen" src="{{item.crestUrl}}">
    </td>
    <td>
      <div class="btn-group" role="group" aria-label="Basic outlined example">
        <a href="/ver/{{item.tla}}"  class="btn btn-outline-primary">Ver</a>
        <a href="/editar/{{item.tla}}" class="btn btn-outline-primary">Editar</a>
        <a href="/eliminar/{{item.tla}}" class="btn btn-outline-primary">Eliminar</a>
      </div>
    </td>
  </tr>
  {{/each}}
</tbody>